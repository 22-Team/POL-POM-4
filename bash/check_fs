# This is the startup script

[ "$PLAYONLINUX" = "" ] && exit 0
source "$PLAYONLINUX/lib/sources" 

[ "$POL_OS" = "Mac" ] && exit 0
# This script tests filesystem
# Usage :

# check_gl [arch]
# Arch = (x86 | amd64)

FS_Check ()
{
	if grep -q "$2" <<< "$1" ; then
		POL_Debug_Warning "$3"
		exit 1
	fi
}
PartInfo="$(POL_System_PartInfo "$POL_USER_ROOT")"
FS_Check "$PartInfo" "vfat" "$APPLICATION_TITLE cannot run in a FAT32 filesystem"
FS_Check "$PartInfo" "ntfs" "$APPLICATION_TITLE cannot run in a NTFS filesystem"
FS_Check "$PartInfo" "crypt" "$APPLICATION_TITLE cannot run in a FAT32 filesystem"
FS_Check "$PartInfo" "noexec" "Home partition is mounted with noexec option"


POL_Debug_Message "Filesystem is compatible"
exit 0

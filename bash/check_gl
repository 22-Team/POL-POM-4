# This is the startup script

[ "$PLAYONLINUX" = "" ] && exit 0
source "$PLAYONLINUX/lib/sources" 

# This script tests OpenGL libs
# Usage :

# check_gl [arch]
# Arch = (x86 | amd64)

if [ "$1" = "x86" ]
then
	ld -lGL -lGLU -m elf_i386 2> /dev/null
	if [ "$?" = "0" ]
	then
		POL_Debug_Message "32 bits OpenGL is supported by your system"
		exit 0
	else
		POL_Debug_Warning "32 bits OpenGL is not supported by your system"
		exit 1
	fi
fi
if [ "$1" = "amd64" ]
then
	ld -lGL -lGLU -m elf_x86_64 2> /dev/null
	if [ "$?" = "0" ]
	then
		POL_Debug_Message "64 bits OpenGL is supported by your system"
		exit 0
	else
		POL_Debug_Warning "64 bits OpenGL is not supported by your system"
		exit 1
	fi
fi
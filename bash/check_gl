# This is the startup script

[ "$PLAYONLINUX" = "" ] && exit 0
source "$PLAYONLINUX/lib/sources" 

# This script tests OpenGL libs
# Usage :

# check_gl [arch]
# Arch = (x86 | amd64)

[ "$2" = "stdout" ] && cmd="$echo" || cmd="POL_Debug_Message"

Check_OpenGL()
{
	ld -lGL -lGLU -m "$archtype" 2> /dev/null
	if [ "$?" = "0" ]
	then
		$cmd "$archstring OpenGL libraries are installed on your system"
	else
		$cmd "$archstring OpenGL libraries are not installed on your system"
		exit 1
	fi
	
	if [ -x "$PLAYONLINUX/bin/check_dd_$1" ]
	then
		$("$PLAYONLINUX/bin/check_dd_$1")
		[ "$?" = "0" ] && exit 0 || exit 2
	else
		exit 0
	fi	
}
cd /tmp

if [ "$1" = "x86" ]
then
	archtype="elf_i386"
	archstring="32 bits"
	Check_OpenGL "$1"
fi
if [ "$1" = "amd64" ]
then
	archtype="elf_x86_64"
	archstring="64 bits"
	Check_OpenGL "$1"
fi
